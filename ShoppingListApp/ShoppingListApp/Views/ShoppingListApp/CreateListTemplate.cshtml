@model ShoppingListApp.Models.ListTemplates.ShoppingListTemplate

@{
    ViewBag.Title = "CreateListTemplate";
}

<h2>CreateListTemplate</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ShoppingListTemplate</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ShoppingListId)
        @Html.HiddenFor(model => model.Color)
        @Html.HiddenFor(model => model.Contents)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.CreatedUTC)
        @Html.HiddenFor(model => model.ModifiedUTC)
        @Html.HiddenFor(model => model.Priority)

        <div class="form-group">
            @Html.LabelFor(model => model.List, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.List, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.List, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
